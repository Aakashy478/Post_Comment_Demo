const app = require('../app');           // Import the Express app
const http = require('http');            // Import Node.js HTTP module

const port = process.env.PORT || 3000;   // Set port (env or default 3000)
const server = http.createServer(app);   // Create HTTP server with Express

server.listen(port, () => {
    console.log(`Server is running on http://localhost:${port}`); // On start
});

server.on('error', (error) => {
    console.error('Server error:', error);  // Catch and log any errors
});

server.on('listening', () => {
    console.log(`Server is listening on port ${port}`); // Confirm listening
});
